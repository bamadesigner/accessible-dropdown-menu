{
	"name": "@bamadesigner/accessible-dropdown-menu",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "yarn run css && concurrently \"yarn run dev:only\" \"yarn run dev:js\" \"yarn run css:watch\"",
		"dev:only": "vite dev --open",
		"dev:svelte": "vite dev --open",
		"dev:js": "npx tsc --watch --project tsconfig-js.json",
		"build": "yarn run css:build && yarn run build:js && vite build",
		"build:format": "prettier --write docs/**/*.html",
		"build:js": "npx tsc --project tsconfig-js.json && yarn run uglify:js",
		"uglify:js": "yarn run uglify:jsclass && yarn run uglify:jsapp",
		"uglify:jsclass": "uglifyjs static/class-access-menu.js -o static/class-access-menu.min.js",
		"uglify:jsapp": "uglifyjs static/access-menus.js -o static/access-menus.min.js",
		"preview": "vite preview --open",
		"test": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "yarn run lint:svelte && yarn run lint:prettier && yarn run lint:eslint && yarn run lint:styles",
		"lint:eslint": "eslint .",
		"lint:prettier": "prettier --plugin-search-dir . --check .",
		"lint:svelte": "svelte-check --tsconfig ./tsconfig.json",
		"lint:styles": "stylelint \"./pcss/**/*.pcss\"",
		"lint:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "yarn run format:prettier && yarn run format:eslint && yarn run format:styles",
		"format:eslint": "eslint . --fix",
		"format:prettier": "prettier --plugin-search-dir . --write .",
		"format:styles": "stylelint \"./pcss/**/*.pcss\" --fix",
		"css": "NODE_ENV=development postcss ./pcss/**/*.pcss --ext=css --dir ./static",
		"css:watch": "NODE_ENV=development postcss ./pcss/**/*.pcss --ext=css --dir ./static -w",
		"css:build": "NODE_ENV=production postcss ./pcss/**/*.pcss --ext=min.css --dir ./static"
	},
	"devDependencies": {
		"@csstools/postcss-design-tokens": "^2.0.3",
		"@playwright/test": "^1.31.2",
		"@sveltejs/adapter-static": "^2.0.1",
		"@sveltejs/kit": "^1.11.0",
		"@typescript-eslint/eslint-plugin": "^5.55.0",
		"@typescript-eslint/parser": "^5.55.0",
		"autoprefixer": "^10.4.14",
		"concurrently": "^7.6.0",
		"cross-env": "^7.0.3",
		"cssnano": "^5.1.15",
		"eslint": "^8.36.0",
		"eslint-config-prettier": "^8.7.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"postcss": "^8.4.21",
		"postcss-cli": "^10.1.0",
		"postcss-discard-comments": "^5.1.2",
		"postcss-discard-duplicates": "^5.1.0",
		"postcss-import": "^15.1.0",
		"postcss-load-config": "^4.0.1",
		"postcss-mixins": "^9.0.4",
		"postcss-nested": "^6.0.1",
		"postcss-preset-env": "^8.0.1",
		"postcss-pxtorem": "^6.0.0",
		"prettier": "^2.8.4",
		"prettier-plugin-svelte": "^2.9.0",
		"stylelint": "^15.2.0",
		"stylelint-config-recommended": "^10.0.1",
		"stylelint-config-standard": "^30.0.1",
		"svelte": "^3.56.0",
		"svelte-check": "^3.1.4",
		"tslib": "^2.5.0",
		"typescript": "^4.9.5",
		"uglify-js": "^3.17.4",
		"vite": "^4.1.4"
	}
}
